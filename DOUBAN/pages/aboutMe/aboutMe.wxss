/* pages/aboutMe/aboutMe.wxss */
.header {
    height: 420rpx;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    background: radial-gradient(#5ec56d, #55bd62);
}
.header-avatar {
    margin-bottom: 20rpx;
    width: 140rpx;
    height: 140rpx;
    border-radius: 50%;
    overflow: hidden;
    border: 1rpx solid #dedede;
}
.userNick {
    color: #fff;
}
.my-collect {
    display: block;
    margin: 30rpx 0 0 30rpx;
}
.collect {
    display: flex;
    flex-wrap: wrap;
    white-space: nowrap;
    padding-bottom: 30rpx;
}

.film-item {
    margin:  30rpx 45rpx 0;
}
