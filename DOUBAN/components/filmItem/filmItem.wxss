/* components/filmItem/filmItem.wxss */
/* 电影图片 */
.film-item_img {
    width: 160rpx;
    height: 224rpx;
    border-radius: 6px;
}
/* 片名 */
.film-item_name {
    width: 160rpx;
    display: block;
    overflow: hidden;
    text-overflow: ellipsis;
    font-size: 26rpx;
    font-weight: 600;
}
/* 评分 */
.film-score {
    height: 40rpx;
    line-height: 40rpx;
    width: 160rpx;
    overflow: hidden;
}
/* star */
.film-score > image {
    width: 22rpx;
    height: 22rpx;
    vertical-align: middle;
}
/* 数字评分 */
.film-score_number {
    padding-left: 16rpx;
    color: #999;
    font-size: 24rpx;
    vertical-align: middle;
}

/* 无评分 */
.none {
    color: #999;
    font-size: 20rpx;
    vertical-align: bottom;
}
