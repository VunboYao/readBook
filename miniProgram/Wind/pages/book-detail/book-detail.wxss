.container {
    background-color: #f5f5f5;
}

/* 书籍 */
.head {
    padding: 40rpx 0;
    display: flex;
    flex-direction: column;
    align-items: center;
    background-color: #fff;
}

.title {
    color: #2f2f2f;
    margin-top: 20rpx;
    font-size: 28rpx;
    font-weight: 600;
}

.author {
    font-size: 28rpx;
    color: #999;
}

.head-img {
    width: 200rpx;
    height: 300rpx;
    box-shadow: 2px 2px 3px #e3e3e3;
}

/* 统一样式,标题 */
.sub-container {
    display: flex;
    flex-direction: column;
    align-items: center;
    margin-top: 30rpx;
    padding: 30rpx;
    width: 690rpx;
    background-color: #fff;
}

.headline {
    font-size: 30rpx;
    font-weight: 600;
    color: #2f2f2f;
    margin-bottom: 20rpx;
}


/* 短评 */
.comment-container {
    display: flex;
    flex-wrap: wrap;
}

/* 短评组件 */
.y-tag {
    margin: 0 15rpx 10rpx 0;
}
/* 短评数量 */
.slot-num {
    font-size: 22rpx;
    margin-left: 10rpx;
    color: #aaa;
}

